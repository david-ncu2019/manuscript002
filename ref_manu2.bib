	title = {Measuring and Interpreting Multilayer Aquifer-System Compactions for a Sustainable Groundwater-System Development},
	journal = {Water Resources Research},
	volume = {57},
	number = {4},
	pages = {e2020WR028194},
	keywords = {Choushui River Alluvial Fan (CRAF), groundwater, land subsidence, multilayer compaction well (MLCW), Taiwan, time-depth diagram of compaction (TDDC)},
